{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Streamlit",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",           // Specifies running Streamlit as a module
            "args": ["run", "src/app.py"],       // Passes the 'run' command and script name
            "console": "integratedTerminal",  // Uses VS Code's integrated terminal
            "autoReload": {
                "enable": true
            }
        }
    ]
}
